{
    "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "adminUsername": {
            "type": "string"
        },
        "adminPassword": {
            "type": "securestring"
        },
        "name": {
            "type": "string",
            "defaultValue": "virtualedge"
        },
        "vmSize": {
            "type": "string",
            "defaultValue": "Standard_D2s_v3"
        },
        "vmDSCModule": {
            "type": "string",
            "defaultValue": "https://github.com/ScottHolden/VirtualIoTEdge/releases/download/v1.0/VirtualEdgeDSC.zip"
        }
    },
    "variables": {
        "baseName": "[toLower(take(parameters('name'), 15))]",
        "entropy": "[uniqueString(resourceGroup().id, variables('baseName'))]",

        "vmName": "[concat(variables('baseName'), variables('entropy'))]",
        "vmId": "[resourceId('Microsoft.Compute/virtualMachines', variables('vmName'))]",
        "vmComputerName": "[variables('baseName')]",

        "vmDSCName": "[concat(variables('vmName'),'/', 'DSC')]",
        "vmDSCConfigurationFunction": "VirtualEdgeDSC.ps1\\VirtualEdge",

        "vnetName": "[concat(variables('baseName'), variables('entropy'))]",
        "vnetId": "[resourceId('Microsoft.Network/virtualNetworks', variables('vnetName'))]",
        "vnetAddressPrefix": "10.0.0.0/24",

        "nicName": "[concat(variables('baseName'), variables('entropy'))]",
        "nicId": "[resourceId('Microsoft.Network/networkInterfaces', variables('nicName'))]",

        "nsgName": "[concat(variables('baseName'), variables('entropy'))]",
        "nsgId": "[resourceId('Microsoft.Network/networkSecurityGroups', variables('nsgName'))]",

        "publicIPName": "[concat(variables('baseName'), variables('entropy'))]",
        "publicIPId": "[resourceId('Microsoft.Network/publicIpAddresses', variables('publicIPName'))]",

        "subnetName": "default",
        "subnetId": "[concat(variables('vnetId'), '/subnets/', variables('subnetName'))]",
        "subnetAddressPrefix": "10.0.0.0/24"
    },
    "resources": [
        {
            "name": "[variables('vnetName')]",
            "type": "Microsoft.Network/virtualNetworks",
            "apiVersion": "2018-04-01",
            "location": "[resourceGroup().location]",
            "properties": {
                "addressSpace": {
                    "addressPrefixes": [
                        "[variables('vnetAddressPrefix')]"
                    ]
                },
                "subnets": [
                    {
                        "name": "[variables('subnetName')]",
                        "properties": {
                            "addressPrefix": "[variables('subnetAddressPrefix')]"
                        }
                    }
                ]
            }
        },
        {
            "name": "[variables('nsgName')]",
            "type": "Microsoft.Network/networkSecurityGroups",
            "apiVersion": "2018-01-01",
            "location": "[resourceGroup().location]",
            "properties": {
                "securityRules": [
                    {
                        "name": "default-allow-rdp",
                        "properties": {
                            "priority": 1000,
                            "protocol": "Tcp",
                            "access": "Allow",
                            "direction": "Inbound",
                            "sourceApplicationSecurityGroups": [],
                            "destinationApplicationSecurityGroups": [],
                            "sourceAddressPrefix": "*",
                            "sourcePortRange": "*",
                            "destinationAddressPrefix": "*",
                            "destinationPortRange": "3389"
                        }
                    }
                ]
            }
        },
        {
            "name": "[variables('publicIPName')]",
            "type": "Microsoft.Network/publicIpAddresses",
            "apiVersion": "2017-08-01",
            "location": "[resourceGroup().location]",
            "properties": {
                "publicIpAllocationMethod": "Dynamic"
            },
            "sku": {
                "name": "Basic"
            }
        },
        {
            "name": "[variables('nicName')]",
            "type": "Microsoft.Network/networkInterfaces",
            "apiVersion": "2018-04-01",
            "location": "[resourceGroup().location]",
            "dependsOn": [
                "[variables('vnetId')]",
                "[variables('publicIPId')]",
                "[variables('nsgId')]"
            ],
            "properties": {
                "ipConfigurations": [
                    {
                        "name": "ipconfig1",
                        "properties": {
                            "subnet": {
                                "id": "[variables('subnetId')]"
                            },
                            "privateIPAllocationMethod": "Dynamic",
                            "publicIpAddress": {
                                "id": "[variables('publicIPId')]"
                            }
                        }
                    }
                ],
                "networkSecurityGroup": {
                    "id": "[variables('nsgId')]"
                }
            }
        },
        {
            "name": "[variables('vmName')]",
            "type": "Microsoft.Compute/virtualMachines",
            "apiVersion": "2018-04-01",
            "location": "[resourceGroup().location]",
            "dependsOn": [
                "[variables('nicId')]"
            ],
            "properties": {
                "osProfile": {
                    "computerName": "[variables('vmComputerName')]",
                    "adminUsername": "[parameters('adminUsername')]",
                    "adminPassword": "[parameters('adminPassword')]",
                    "windowsConfiguration": {
                        "provisionVmAgent": "true"
                    }
                },
                "hardwareProfile": {
                    "vmSize": "[parameters('vmSize')]"
                },
                "storageProfile": {
                    "imageReference": {
                        "publisher": "MicrosoftWindowsServer",
                        "offer": "WindowsServer",
                        "sku": "2016-Datacenter",
                        "version": "latest"
                    },
                    "osDisk": {
                        "createOption": "fromImage",
                        "managedDisk": {
                            "storageAccountType": "Premium_LRS"
                        }
                    },
                    "dataDisks": []
                },
                "networkProfile": {
                    "networkInterfaces": [
                        {
                            "id": "[variables('nicId')]"
                        }
                    ]
                }
            }
        },
        {
            "type": "Microsoft.Compute/virtualMachines/extensions",
            "name": "[variables('vmDSCName')]",
            "apiVersion": "2015-05-01-preview",
            "location": "[resourceGroup().location]",
            "dependsOn": [
                "[variables('vmId')]"
            ],
            "properties": {
              "publisher": "Microsoft.Powershell",
              "type": "DSC",
              "typeHandlerVersion": "2.19",
              "autoUpgradeMinorVersion": true,
              "settings": {
                "ModulesUrl": "[parameters('vmDSCModule')]",
                "ConfigurationFunction": "[variables('vmDSCConfigurationFunction')]"
              },
              "protectedSettings": null
            }
          }
    ]
}